<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/bottom_sheet"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    app:layout_behavior="android.support.design.widget.BottomSheetBehavior">

    <LinearLayout
        android:id="@+id/ll_share"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="5dp">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:background="@drawable/ic_menu_options_share"
            android:paddingRight="30dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Share"
            android:paddingLeft="20dp"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_archive"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="5dp">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:background="@drawable/ic_menu_options_archive"
            android:paddingRight="30dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Archive"
            android:paddingLeft="20dp"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_trash"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="5dp">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:background="@drawable/ic_menu_options_trash"
            android:paddingRight="30dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Delete"
            android:paddingLeft="20dp"/>
    </LinearLayout>


    <LinearLayout
        android:id="@+id/ll_color_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="5dp">

        <ImageButton
            android:id="@+id/imageButton_white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_menu_circle_white"
            android:padding="15dp"
            android:layout_marginRight="5dp"/>
        <ImageButton
            android:id="@+id/imageButton_yellow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_menu_circle_yellow"
            android:padding="15dp"
            android:layout_marginRight="5dp"/>
        <ImageButton
            android:id="@+id/imageButton_chrome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_menu_circle_chrome"
            android:padding="15dp"
            android:layout_marginRight="5dp"/>
        <ImageButton
            android:id="@+id/imageButton_green"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_menu_circle_green"
            android:padding="15dp"
            android:layout_marginRight="5dp"/>
        <ImageButton
            android:id="@+id/imageButton_pink"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_menu_circle_pink"
            android:padding="15dp"
            android:layout_marginRight="5dp"/>
        <ImageButton
            android:id="@+id/imageButton_blue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_menu_circle_blue"
            android:padding="15dp"
            android:layout_marginRight="5dp"/>
        <ImageButton
            android:id="@+id/imageButton_purple"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_menu_circle_purple"
            android:padding="15dp"
            android:layout_marginRight="5dp"/>
        <ImageButton
            android:id="@+id/imageButton_grey"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_menu_circle_grey"
            android:padding="15dp" />

    </LinearLayout>

</LinearLayout>