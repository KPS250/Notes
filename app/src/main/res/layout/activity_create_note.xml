<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingTop="@dimen/note_paddingTop"
        android:clipToPadding="false">

        <EditText
            android:id="@+id/editText_title"
            android:hint="@string/note_title_hint"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="@android:color/transparent"
            android:textSize="20sp"
            android:paddingLeft="@dimen/note_paddingLR"
            android:paddingRight="@dimen/note_paddingLR"
            android:isScrollContainer="true"
            android:layout_weight="0.5"/>

        <EditText
            android:id="@+id/editText_body"
            android:hint="@string/note_body_hint"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_below="@+id/editText_title"
            android:layout_weight="6"
            android:background="@android:color/transparent"
            android:contextClickable="false"
            android:ems="10"
            android:gravity="top"
            android:inputType="textMultiLine"
            android:paddingLeft="@dimen/note_paddingLR"
            android:paddingRight="@dimen/note_paddingLR"
            android:paddingTop="@dimen/note_paddingLR"
            android:textSize="18sp" />

        <LinearLayout
            android:id="@+id/ll_optionsMenuParent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:orientation="vertical"
            android:background="@color/white"
            android:cursorVisible="false"
            android:clipToPadding="false"
            android:elevation="@dimen/note_elevation" >

            <RelativeLayout
                android:id="@+id/ll_optionsMenu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="@dimen/note_paddingTop">

            <ImageButton
                android:id="@+id/imageButton_menu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_cloud_sync"
                android:layout_alignParentLeft="true"/>

            <TextView
                android:id="@+id/textView_lastUpdate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:clickable="false"
                android:text="@string/note_last_edited"
                android:textAlignment="center"
                android:layout_centerHorizontal="true"/>

            <ImageButton
                android:id="@+id/imageButton_options"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_more_vert"
                android:layout_alignParentRight="true"/>

            </RelativeLayout>
        </LinearLayout>

    </LinearLayout>


    <LinearLayout
        android:id="@+id/bottom_sheet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/white"
        app:layout_behavior="android.support.design.widget.BottomSheetBehavior"
        android:elevation="@dimen/note_elevation">

        <LinearLayout
            android:id="@+id/ll_share"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/note_paddingLR">

            <ImageView
                android:layout_width="@dimen/note_bs_icon"
                android:layout_height="@dimen/note_bs_icon"
                android:background="@drawable/ic_menu_options_share"
                android:paddingRight="@dimen/note_bs_icon_paddingR" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/note_bs_icon_paddingL"
                android:text="@string/NOTE_SHARE"
                android:layout_gravity="center_vertical"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_restore"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/note_paddingLR">

            <ImageView
                android:layout_width="@dimen/note_bs_icon"
                android:layout_height="@dimen/note_bs_icon"
                android:background="@drawable/ic_menu_options_restore"
                android:cropToPadding="false"
                android:paddingRight="@dimen/note_bs_icon_paddingR" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/note_bs_icon_paddingL"
                android:text="@string/NOTE_RESTORE"
                android:layout_gravity="center_vertical"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_archive"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/note_paddingLR">

            <ImageView
                android:layout_width="@dimen/note_bs_icon"
                android:layout_height="@dimen/note_bs_icon"
                android:background="@drawable/ic_menu_options_archive"
                android:cropToPadding="false"
                android:paddingRight="@dimen/note_bs_icon_paddingR" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/note_bs_icon_paddingL"
                android:text="@string/NOTE_ARCHIVE"
                android:layout_gravity="center_vertical"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_trash"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/note_paddingLR">

            <ImageView
                android:layout_width="@dimen/note_bs_icon"
                android:layout_height="@dimen/note_bs_icon"
                android:background="@drawable/ic_menu_options_trash"
                android:paddingRight="@dimen/note_bs_icon_paddingR" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/note_bs_icon_paddingL"
                android:text="@string/NOTE_TRASH"
                android:layout_gravity="center_vertical"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_delete"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/note_paddingLR">

            <ImageView
                android:layout_width="@dimen/note_bs_icon"
                android:layout_height="@dimen/note_bs_icon"
                android:background="@drawable/ic_menu_options_delete"
                android:paddingRight="@dimen/note_bs_icon_paddingR" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/note_bs_icon_paddingL"
                android:text="@string/NOTE_DELETE"
                android:layout_gravity="center_vertical"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_color_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/color_margin">

            <ImageButton
                android:id="@+id/imageButton_white"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/color_margin"
                android:background="@drawable/ic_menu_circle_white"
                android:layout_weight="1"
                android:padding="@dimen/color_padding"/>

            <ImageButton
                android:id="@+id/imageButton_yellow"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/color_margin"
                android:background="@drawable/ic_menu_circle_yellow"
                android:layout_weight="1"
                android:padding="@dimen/color_padding"/>

            <ImageButton
                android:id="@+id/imageButton_chrome"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/color_margin"
                android:background="@drawable/ic_menu_circle_chrome"
                android:layout_weight="1"
                android:padding="@dimen/color_padding"/>

            <ImageButton
                android:id="@+id/imageButton_peacock"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/color_margin"
                android:background="@drawable/ic_menu_circle_peacock"
                android:padding="@dimen/color_padding"
                android:layout_weight="1"/>

            <ImageButton
                android:id="@+id/imageButton_green"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/color_margin"
                android:background="@drawable/ic_menu_circle_green"
                android:layout_weight="1"
                android:padding="@dimen/color_padding"/>

            <ImageButton
                android:id="@+id/imageButton_pink"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/color_margin"
                android:background="@drawable/ic_menu_circle_pink"
                android:layout_weight="1"
                android:padding="@dimen/color_padding"/>

            <ImageButton
                android:id="@+id/imageButton_orange"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/color_margin"
                android:background="@drawable/ic_menu_circle_orange"
                android:padding="@dimen/color_padding"
                android:layout_weight="1"/>

            <ImageButton
                android:id="@+id/imageButton_blue"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/color_margin"
                android:background="@drawable/ic_menu_circle_blue"
                android:padding="@dimen/color_padding"
                android:layout_weight="1"/>

            <ImageButton
                android:id="@+id/imageButton_purple"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/color_margin"
                android:background="@drawable/ic_menu_circle_purple"
                android:padding="@dimen/color_padding"
                android:layout_weight="1"/>

            <ImageButton
                android:id="@+id/imageButton_grey"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_menu_circle_grey"
                android:padding="@dimen/color_padding"
                android:layout_weight="1"/>

        </LinearLayout>

    </LinearLayout>



</android.support.design.widget.CoordinatorLayout>